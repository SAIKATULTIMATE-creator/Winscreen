{
  "appId": "com.screenshare.connect",
  "appName": "Winscreen",
  "webDir": "dist/public",
  "server": {
    "androidScheme": "https",
    "url": "https://your-app-name.onrender.com"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2563eb",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "App": {
      "launchUrl": "https://your-app-name.onrender.com"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  }
}
